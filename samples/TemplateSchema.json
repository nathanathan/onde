{
    "$schema": "http://json-schema.org/draft-03/schema",
    "name":"Form template",
    "type": "object",
    "properties": {
        "fields": {
            "type": "array",
            "items": [
                {
                    "name":"Field",
                    "type": "object",
                    "properties": {
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                 "properties": {
                                    "item_x": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "item_y": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "label": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": ["string","number"]
                                    }
                                 }
                            }
                        },
                        "classifier" : {
                                "type": "object",
                                "required": false,
                                "properties": {
                                    "classifier_height": {
                                        "required": true,
                                        "type": "integer"
                                    },
                                    "classifier_width": {
                                        "required": true,
                                        "type": "integer"
                                    },
                                    "training_data_uri": {
                                        "required": true,
                                        "default": "bubbles",
                                        "type": "string"
                                    },
                                    "classification_map": {
                                        "type": "object",
                                        "required": true,
                                        "additionalProperties": true,
                                        "default": {
                                            "empty":false
                                        }
                                    },
                                    "default_classification": 
                                    {
                                        "required": true,
                                        "type": "any",
                                        "default": false
                                    },
                                    "alignment_radius": 
                                    {
                                        "description": "If specified a hill climbing search will be done to align the classified items.",
                                        "default": 0,
                                        "required": false,
                                        "type": "number"
                                    }
                                }
                        },
                        "label": {
                            "type": "string"
                        },
                        "name": {
                            "required": true,
                            "description": "A unique name used to identify this field. Must follow xml naming conventions.",
                            "type": "string"
                        },
                        "type": {
                            "default": "input",
                            "required": true,
                            "description": "Correponds with xform body element types.",
                            "type": "string"
                        },
                        "segments": {
                            "name": "Segment",
                            "description": "Segments are used to specify rectangualr areas of the form that a fields are bounded to.",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "segment_height": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "segment_width": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "segment_x": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "segment_y": {
                                        "required": true,
                                        "type": "number"
                                    },
                                    "align_segment": 
                                    {
                                        "description": "If this segment has a bounding rectagle it can be used for additional alignment if this is true. For flat images this isn't necessairy.",
                                        "default": false,
                                        "required": false,
                                        "type": "boolean"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "height": {
            "description": "The form's height in pixels.",
            "type": "number"
        },
        "imageFilename": {
            "description": "The filename of the form image.",
            "type": "string"
        },
        "width": {
            "description": "The form's width in pixels.",
            "type": "number"
        }
    }
}